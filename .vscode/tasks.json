{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
			"preset": "${command:cmake.activeBuildPresetName}",
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "cmake",
			"label": "CMake: test",
			"command": "test",
			"preset": "${command:cmake.activeTestPresetName}",
			"group": "test",
			"dependsOn": "CMake: build",
		}
	]
}